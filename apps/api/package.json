{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "prisma": {
    "seed": "node prisma/seed/seed-menu.cjs"
  },
  "scripts": {
    "build": "pnpm --filter @shared/menu build && pnpm run prisma:generate && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:prod": "pnpm run build && node --enable-source-maps dist/main.js",
    "start:dev": "pnpm --filter @shared/menu build && pnpm run prisma:generate && sh -c 'tsc -p tsconfig.build.json && (tsc -p tsconfig.build.json -w --preserveWatchOutput & TSC_PID=$!; node --enable-source-maps --watch dist/main.js; NODE_RC=$?; kill $TSC_PID 2>/dev/null || true; wait $TSC_PID 2>/dev/null || true; if [ \"$NODE_RC\" -eq 130 ]; then exit 0; else exit \"$NODE_RC\"; fi)'",
    "start:debug": "pnpm --filter @shared/menu build && pnpm run prisma:generate && nest start -c nest-cli.json --path tsconfig.build.json --debug --watch",
    "lint": "pnpm --filter @shared/menu run build && prisma generate && eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "prisma generate && eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prisma:generate": "prisma generate",
    "pretest": "pnpm run prisma:generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@paralleldrive/cuid2": "^2.3.1",
    "@prisma/client": "^6.17.0",
    "@shared/menu": "workspace:*",
    "argon2": "^0.44.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^5.2.1",
    "luxon": "^3.7.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.37.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.9",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "prettier": "^3.4.2",
    "prisma": "^6.17.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
